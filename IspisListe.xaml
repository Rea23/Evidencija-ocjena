<Page x:Class="zavrsni_rad.IspisListe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zavrsni_rad"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="IspisListe" Background="Cornsilk">

    <Grid HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label x:Name="predmet" Style="{StaticResource labelStyle4}" Grid.Row="1" Margin="0 30 0 0"></Label>
        <Label Style="{StaticResource labelStyle5}"  Grid.Row="2" Margin="0 0 0 20">Ispis ispitne liste</Label>
        <StackPanel Grid.Row="3" Margin="0 20 0 0">
            <Label x:Name="z_rok" Style="{StaticResource labelStyle3}" Foreground="Orange" MouseLeftButtonUp="Label_MouseLeftButtonUp">Zimski rokovi</Label>
            <Label x:Name="lj_rok" Style="{StaticResource labelStyle3}" Foreground="Orange" MouseLeftButtonUp="Label_MouseLeftButtonUp_1">Ljetni rokovi</Label>
        </StackPanel>
    </Grid>
</Page>
