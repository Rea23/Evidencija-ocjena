<Page x:Class="zavrsni_rad.LabVjezbe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:zavrsni_rad"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LabVjezbe" Background="Cornsilk">

    <ScrollViewer>
        <Grid HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label x:Name="predmet" Style="{StaticResource labelStyle4}" Grid.Row="1" Margin="0 30 0 0"></Label>
            <Label x:Name="podnaslov" Style="{StaticResource labelStyle5}"  Grid.Row="2" Margin="0 0 0 20"></Label>
            <Grid Grid.Row="3">
                <DataGrid x:Name="tablica_vjezbe" />
            </Grid>
            <Button Grid.Row="4" Width="110" Height="40" Background="Green" Foreground="Beige" Margin="0 20 0 0" HorizontalAlignment="Left">Dodaj podatke</Button>
        </Grid>
    </ScrollViewer>
</Page>
